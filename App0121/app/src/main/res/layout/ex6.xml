            android:layout_margin="50dp"
            android:background="#EF7CB8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="50dp"
                android:background="#FFBF00"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_margin="50dp"
                    android:background="#CFFF83"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>